@model CourseWorkDonorSite.Models.BloodTransfusionStation


<h1>Видалити</h1>

<h3>Ви певні, що хочете видалити це місце здачі крові?</h3>
<div>
    <h4>Місце здачі крові</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Місто
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd class>
        <dt class = "col-sm-2">
            Назва
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Адреса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StationId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-controller="BloodTransfusionStations" asp-action="Details" asp-route-id="@Model.StationId">Назад до списку</a>
    </form>
