@model CourseWorkDonorSite.Models.BloodRecipient

<h1>Видалити реципієнта</h1>

<h3>Ви впевнені, що хочете видалити реципієнта?</h3>
<div>
    <h4>Реципієнт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Місто
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd class>
        <dt class = "col-sm-2">
            Ім'я
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecipientName)
        </dd>
        <dt class = "col-sm-2">
            Телефон
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            Група крові
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodType)
        </dd>
        <dt class = "col-sm-2">
            Резус крові
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RhesusBlood)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BloodRecipientId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
